<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <link rel="icon" href="/img/logo.svg">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        İlanlar
    </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/default.css">
    <link rel="stylesheet" href="/css/list-ilanlar.css">
    <link rel="stylesheet" href="/css/cards.css">
</head>

<body>
    <div id="wrapper">
            <%- include('partials/navbar') %>
            <div class="container">
                <header class="başlik">
                    <h1>İlanlar</h1>
                </header>

                <div class="listings-container">
                    <!-- İlan Başlangıcı -->
                    <% ilanlar.forEach(ilan=> { %>
                        <div class="listing-item">
                            <img src="<%= ilan.images[0] %>" onerror="this.src='img/satilik-img.jpg';" alt="İlan Görseli">
                            <div class="listing-details">
                                <h2>
                                    <%= ilan.title %>
                                </h2> <!-- İlan başlığı -->
                                <p class="price">₺<%= ilan.price %>
                                </p> <!-- İlan fiyatı -->
                                <a href="/ilan/<%= ilan._id %>" class="view-details-btn">Detayları Görüntüle</a>
                                <!-- Detay sayfası linki -->

                                <form action="/addfavoritesilan/<%=ilan._id %>" method="post">
                                    <input type="hidden" name="ilanid" value="<%= ilan._id %>">
                                    <button type="submit" class="view-details-btn" data-ilan-id="<%= ilan._id %>">
                                        Favorilere Ekle
                                    </button>
                                </form>
                                <!-- Favorilere ekle -->
                            </div>
                        </div>
                        <% }) %>
                </div>
            </div>

            <%- include('partials/footer') %>
    </div>

    <script src="/js/favorites.js"></script>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>

</html>