<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <link rel="icon" href="/img/logo.svg">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        İlanlar
    </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/default.css">
    <link rel="stylesheet" href="/css/list-ilanlar.css">
    <link rel="stylesheet" href="/css/cards.css">
</head>

<body>
    <div id="wrapper">
            <%- include('partials/navbar') %>
            <div class="container">
                <h1 class="mb-4">Satılık Ürünler</h1>
                <div class="card-box">
                    <% if (ilanlar.length> 0) { %>
                        <% ilanlar.forEach(function(ilan) { %>
                            <div class="card">
                                <% if (ilan.images.length> 0) { %>
                                    <!-- Bootstrap Carousel Başlangıcı -->
                                    <div id="ilanCarousel<%= ilan._id %>" class="carousel slide" data-bs-ride="carousel">
                                        <% if (ilan.images.length != 1) { %>
                                            <div class="carousel-indicators">
                                                <% ilan.images.forEach((image, index)=> { %>
                                                    <button type="button" data-bs-target="#ilanCarousel<%= ilan._id %>"
                                                        data-bs-slide-to="<%= index %>"
                                                        class="<%= index === 0 ? 'active' : '' %>"
                                                        aria-current="<%= index === 0 ? 'true' : 'false' %>"
                                                        aria-label="Slide <%= index + 1 %>">
                                                    </button>
                                                <% }) %>
                                            </div>
                                        <% } %>
                                        
                                        <div class="carousel-inner">
                                            <% ilan.images.forEach((image, index)=> { %>
                                                <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
                                                    <img src="<%= image %>" onerror="this.src='img/satilik-img.jpg';" class="d-block w-100" alt="İlan Fotoğrafı">
                                                </div>
                                            <% }) %>
                                        </div>
                                        
                                        <% if (ilan.images.length != 1) { %>
                                            <button class="carousel-control-prev" type="button"
                                                data-bs-target="#ilanCarousel<%= ilan._id %>" data-bs-slide="prev">
                                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                                <span class="visually-hidden">Previous</span>
                                            </button>
                                            <button class="carousel-control-next" type="button"
                                                data-bs-target="#ilanCarousel<%= ilan._id %>" data-bs-slide="next">
                                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                                <span class="visually-hidden">Next</span>
                                            </button>
                                        <% } %>
                                    </div>
                                    <!-- Carousel Sonu -->
                                <% } else { %>
                                    <div class="carousel slide">
                                        <div class="carousel-inner">
                                            <div class="carousel-item active">
                                                <img src="/img/satilik-img.jpg" class="d-block w-100"
                                                    alt="Varsayılan Satılık Fotoğrafı">
                                            </div>
                                        </div>
                                    </div>
                                <% } %>
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <%= ilan.title %>
                                    </h5>
                                    <div class="card-content">
                                        <p><%= ilan.description %></p>
                                        <p class="price">
                                            ₺<%= ilan.price %>
                                        </p>
                                    </div>
                                    <span>İlan Sahibi:</span>
                                    <a href="/profile/<%= ilan.owner._id.toString()%>"><%= ilan.owner.username  %></a>
                                    
                                    <a href="/ilan/<%= ilan._id %>" class="btn btn-primary">Detaylar</a>

                                    <form action="/addfavoritesilan/<%=ilan._id %>" method="post">
                                        <input type="hidden" name="ilanid" value="<%= ilan._id %>">
                                        <button type="submit" class="btn btn-primary" data-ilan-id="<%= ilan._id %>">
                                            Yıldız
                                        </button>
                                    </form>
                                </div>                            
                            </div>
                        <% }) %>
                    <% } else { %> <p>Satılık İlanı yoktur</p> <% } %>
                    </div>
                </div>
            </div>

            <%- include('partials/footer') %>
    </div>

    <script src="/js/favorites.js"></script>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>

</html>