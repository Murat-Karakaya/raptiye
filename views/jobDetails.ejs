<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= job.jobTitle %> - Job Details</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container my-5">
	<%- include('partials/navbar') %>
    <h1 class="mb-4"><%= job.jobTitle %></h1>

    <!-- Job Images Carousel (if there are any images) -->
    <% if (job.images.length > 0) { %>
      <div id="carousel<%= job._id %>" class="carousel slide mb-4" data-bs-ride="carousel">
        <div class="carousel-inner">
          <% job.images.forEach(function(image, index) { %>
            <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
              <img src="<%= image %>" class="d-block w-100" alt="Job Image">
            </div>
          <% }) %>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carousel<%= job._id %>" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carousel<%= job._id %>" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>
    <% } %>

    <!-- Job Details -->
    <p><strong>Date:</strong> <%= new Date(job.removalDate).toDateString() %></p>
    <p><strong>Description:</strong> <%= job.description %></p>
    <p><strong>Price:</strong> $<%= job.price %></p>

    <hr>

    <!-- Additional Info -->
    <p><strong>Posted by:</strong> <%= owner.username %></p>
    <p><strong>Created At:</strong> <%= new Date(job.createdAt).toLocaleDateString() %></p>

    <a href="/" class="btn btn-primary mt-4">Back to Listings</a>
	<%- include('partials/footer') %>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
