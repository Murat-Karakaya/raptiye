<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="/img/logo.svg">
    <title>Kampüste Bırakılan Mesajlar</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css">
    <link rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.8.1/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="/css/default.css">
    <link rel="stylesheet" href="/css/kampusemesajlar.css">
</head>

<body>
    <div id="wrapper">
        <%- include('partials/navbar') %>
        <div class="container mt-5">
            <h1>Kampüse Bırakılan Mesajlar</h1>
            <% if (messages.length> 0) { %>
            <ul class="list-group">
                <% messages.forEach(function(message) { %>
                    <li class="list-group-item">
                        <strong><%= message.owner %></strong>:
                        <p><%= message.mesaj %></p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="d-flex align-items-center">
                                <% if (message.upVoters.includes(userId)) { %>
                                    <form id="undo-upvote-<%= message._id %>" action="/undo-upvote/<%= message._id %>" method="POST" class="d-inline">
                                        <button type="submit" onclick="undoUpvoted(this, '<%= message._id %>')" class="upvoted thumb">
                                            <i class="bi bi-hand-thumbs-up"></i>
                                            <span class="fs-6"><%= message.upvotes %></span>
                                        </button>
                                    </form>
                                <% } else { %>
                                    <!-- bura güncellendi -->
                                    <form id="upvote-<%= message._id %>" action="/upvote/<%= message._id %>" method="POST" class="d-inline">
                                        <button type="submit" onclick="upvoted(this, '<%= message._id %>')" class="thumb">
                                            <i class="bi bi-hand-thumbs-up"></i>
                                            <span class="fs-6"><%= message.upvotes %></span>
                                        </button>
                                    </form>
                                <% } %>
                                <!-------------------------------->
                                <% if (message.downVoters.includes(userId)) { %>
                                    <form id="undo-downvote-<%= message._id %>" action="/undo-downvote/<%= message._id %>" method="POST" class="d-inline ms-2">
                                        <button type="submit" onclick="undoDownvoted(this, '<%= message._id %>')" class="downvoted thumb">
                                            <i class="bi bi-hand-thumbs-down"></i>
                                            <span class="fs-6"><%= message.downvotes %></span>
                                        </button>
                                    </form>
                                <% } else { %>
                                    <form id="downvote-<%= message._id %>" action="/downvote/<%= message._id %>" method="POST" class="d-inline ms-2">
                                        <button type="submit" onclick="downvoted(this, '<%= message._id %>')" class="thumb">
                                            <i class="bi bi-hand-thumbs-down"></i>
                                            <span class="fs-6"><%= message.downvotes %></span>
                                        </button>
                                    </form>
                                <% } %>
                            </div>
                        </div>

                        <!-- Yorumlar için dropdown -->
                        <div class="mt-3">
                            <button class="btn btn-secondary" type="button" data-bs-toggle="collapse"
                                data-bs-target="#yorumlar-<%= message._id %>" aria-expanded="false"
                                aria-controls="yorumlar-<%= message._id %>">
                                Yorumlar
                            </button>
                            <div class="collapse mt-2" id="yorumlar-<%= message._id %>">
                                <ul class="list-group">
                                    <% if (message.yorumlar.length > 0) { %>
                                        <% message.yorumlar.forEach(function(yorum) { %>
                                            <li class="list-group-item">
                                                <a href="/profile/<%=yorum.owner._id.toString() %>">
                                                    <strong><%= yorum.owner.username %></strong>
                                                </a>
                                                : <%= yorum.yorum %>
                                                <small class="text-muted float-end"><%= new Date(yorum.createdAt).toLocaleString('tr-TR') %></small>
                                            </li>
                                        <% }) %>
                                    <% } else { %>
                                        <li class="list-group-item">Henüz bir yorum yok.</li>
                                    <% } %>
                                </ul>

                                <!-- Yorum ekleme formu -->
                                <form action="/add-comment" method="POST" class="mt-3">
                                    <div class="mb-3">
                                        <textarea class="form-control" name="yorum" rows="2"
                                            placeholder="Yorumunuzu buraya yazın"></textarea>
                                    </div>
                                    <input type="hidden" name="messageId" value="<%= message._id %>">
                                    <button type="submit" class="btn btn-primary">Yorum Yap</button>
                                </form>
                            </div>
                        </div>
                    </li>
                <% }); %>
            </ul>

            <% } else { %>
            <p>Hadi! İlk mesajı sen bırak.</p>
            <% } %>
        </div>
        <%- include('partials/footer') %>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/vote.js"></script>
    <script src="/js/vote-render.js"></script>

</body>

</html>
