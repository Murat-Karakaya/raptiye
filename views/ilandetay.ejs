<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="UTF-8">
    <link rel="icon" href="/img/logo.svg">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>İlanlar</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/default.css">
    <link rel="stylesheet" href="/css/ilandetay.css">
</head>

<body>
    <div id="wrapper">
        <%- include('partials/navbar') %>
            <div class="container">
                <header>
                    <h1>İlan Detayları</h1>
                </header>

                <div class="content">
                    <div class="image-gallery">
                        <% if (ilan.images.length> 0) { %>
                            <div id="carouselIlan" class="carousel slide" data-bs-ride="carousel">
                                <div class="carousel-inner">
                                    <% ilan.images.forEach(function(image, index) { %>
                                        <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
                                            <img src="<%= image %>" class="d-block w-100" alt="İlan Görseli">
                                        </div>
                                        <% }) %>
                                </div>
                                <button class="carousel-control-prev" type="button" data-bs-target="#carouselIlan"
                                    data-bs-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="visually-hidden">Previous</span>
                                </button>
                                <button class="carousel-control-next" type="button" data-bs-target="#carouselIlan"
                                    data-bs-slide="next">
                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                    <span class="visually-hidden">Next</span>
                                </button>
                            </div>
                            <% } %>
                    </div>

                    <div class="details">
                        <h2 class="ilanbasligi">
                            <%= ilan.title %>
                        </h2>
                        <p class="price">
                            <%= ilan.price %> TL
                        </p>
                        <p class="description">
                            <%= ilan.description %>
                        </p>
                        <div class="seller-info">
                            <h3>Satıcıya ulaşmak için</h3>
                            <%= ilan.reachYou %>
                        </div>
                        <div class="seller-info">
                            <h3>ya da doğrudan mesaj gönderin</h3>
                            <a href="/messages/<%=currentUserId%>/<%=ilan.owner%>">
                                <button>Mesaj At</button>
                            </a>
                        </div>
                        
                        <div class="seller-info">
                            <h3>Satıcı Profili:
                                 <a href="/profile/<%=user.username  %>"><%=user.username  %> </a>
                            </h3>
                        </div>
                    </div>
                </div>
            </div>

            <%- include('partials/footer') %>
    </div>

    <!-- Bootstrap JS and Popper.js -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
</body>

</html>